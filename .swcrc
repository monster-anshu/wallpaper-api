{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "dynamicImport": true,
      "decorators": true,
      "dts": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2017",
    "externalHelpers": false,
    "keepClassNames": true,
    "loose": true,
    "minify": {
      "compress": false,
      "mangle": false
    },
    "preserveAllComments": false
  },
  "module": {
    "type": "commonjs",
    "strict": true
  }
}
